<body>

    <div id="containerFormulario">
        <p>Employees</p>
        <div id="containerFormulario2">
            <form action="/Employees/Index" method="post">
                <div class="container" id="elementsContainer">
                    <div class="row">
                        <div class="col-md-2">
                            <div>
                                <label for="ein">Name</label>
