                </div>
                <button type="submit" class="btn btn-primary" id="btnSearch">Search</button>
                <a class="btn btn-success" id="btnNew" href="/Employees/Create">New</a>
            </form>
        </div>
    </div>


    <div id="tabela">
        <h3>Employees</h3>
        <table id="tblCustomers" class="table table-bordered table-sm">
            <thead class="thead-dark">
