                            <div class="inner-radio-form">
                                <label for="activated">Activated</label>
                                <input type="radio" name="model.Status" id="activated" value="Activated" />
                            </div>

                            <div class="inner-radio-form">
                                <label for="desactivated">Desactivated</label>
